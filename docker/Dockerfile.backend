FROM python:3.10-slim

WORKDIR /app

# Install system dependencies required for RDKit and other scientific packages
RUN apt-get update && apt-get install -y \
    build-essential \
    libxrender1 \
    libegl1 \
    libxext6 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file
COPY backend/requirements.txt /app/backend/

# Install Python dependencies
WORKDIR /app/backend
RUN pip install --no-cache-dir -r requirements.txt
RUN pip install --no-cache-dir gunicorn flask-cors

# Copy backend code
WORKDIR /app
COPY backend /app/backend

# Expose port
EXPOSE 5000

# Create startup script
COPY <<EOF /app/start.sh
#!/bin/sh
cd /app
python -c "from backend.llm_integration.model_downloader import initialize_models; initialize_models()"
exec gunicorn --bind 0.0.0.0:5000 "backend.app:app"
EOF

RUN chmod +x /app/start.sh

# Run the startup script
CMD ["/app/start.sh"] 